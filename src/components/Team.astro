---
import { Image } from 'astro:assets';
import { currentTeamMembers, teamMentors } from '../data/teamMembers';
import { getCurrentLanguage, getTranslation } from '../lib/i18n';
import { translations } from '../lib/translations';

const currentLang = getCurrentLanguage(Astro);
const t = (key: string) => getTranslation(translations, currentLang, key);

const getRoleLabel = (id: string) => {
  const key = `team.roles.${id}`;
  const translated = t(key);
  return translated === key ? undefined : translated;
};

const normalizeRoleKey = (value: string) =>
  value
    .toLocaleLowerCase('tr-TR')
    .normalize('NFD')
    .replace(/[\u0300-\u036f]/g, '')
    .replace(/[^a-z0-9]+/g, '_')
    .replace(/^_+|_+$/g, '');

const translateRoleLabel = (role: string) => {
  const key = `team.role_labels.${normalizeRoleKey(role)}`;
  const translated = t(key);
  return translated === key ? role : translated;
};

const translateRoles = (roles?: string[]) => (roles ?? []).map(translateRoleLabel);

const getMemberRoleLabels = (member: (typeof currentTeamMembers)[number]) => {
  const labels = [...translateRoles(member.roles)];
  if (member.isCaptain) {
    labels.unshift(t('team.badges.captain'));
  }
  const mapped = getRoleLabel(member.id);
  if (!labels.length && mapped) {
    labels.push(mapped);
  }
  return labels;
};

const getMentorRoleLabels = (mentor: (typeof teamMentors)[number]) => {
  const labels = [...translateRoles(mentor.roles)];
  const mapped = getRoleLabel(mentor.id);
  if (!labels.length && mapped) {
    labels.push(mapped);
  }
  return labels;
};

// Import all images from public/img
const images = import.meta.glob<{ default: ImageMetadata }>('/public/img/*.{jpg,jpeg,png,JPG,JPEG,PNG}');

// Helper function to get image module
async function getImageSrc(imagePath: string) {
  if (!imagePath) return null;

  // Check if it's a full path or just filename
  const filename = imagePath.includes('/') ? imagePath.split('/').pop() : imagePath;
  const imageSrc = images[`/public/img/${filename}`];

  if (imageSrc) {
    const mod = await imageSrc();
    return mod.default;
  }

  // If no optimized image found, return null (will show placeholder)
  return null;
}

// Process team members with optimized images
const membersWithImages = await Promise.all(
  currentTeamMembers.map(async (member) => ({
    ...member,
    optimizedImage: await getImageSrc(member.image)
  }))
);

const mentorsWithImages = await Promise.all(
  teamMentors.map(async (mentor) => ({
    ...mentor,
    optimizedImage: await getImageSrc(mentor.image)
  }))
);
---

<section id="takim" class="py-20 bg-gray-100 scroll-mt-24">
  <div class="container mx-auto px-4">
    <h2 class="text-4xl font-bold text-center text-gray-800 mb-16">{t('team.title')}</h2>

    <!-- Current Team Members (Captains + Regular Members) -->
    <div class="mb-12">
      <h3 class="text-2xl font-semibold text-gray-700 text-center mb-8">{t('team.members')}</h3>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-8">
        {membersWithImages.map((member) => (
          <div class="glass-card overflow-hidden relative">
            {member.roles?.length > 0 && (
              <div class="absolute top-2 z-10 flex flex-col gap-2 items-start" style="left:0.5rem;">
                {translateRoles(member.roles).map((role) => (
                  <span
                    class="bg-primary text-white text-sm px-2 py-1 rounded-lg"
                  >
                    {role}
                  </span>
                ))}
              </div>
            )}
            {member.isCaptain && (
              <div class="absolute top-2 right-2 z-10">
                <span class="bg-accent text-white text-sm font-bold px-2 py-1 rounded-lg">{t('team.badges.captain')}</span>
              </div>
            )}
            <div class="w-full h-64 team-member-image">
              {member.optimizedImage ? (
                <Image
                  src={member.optimizedImage}
                  alt={member.name}
                  width={300}
                  height={256}
                  loading="lazy"
                  class="w-full h-64 object-cover object-center"
                  format="webp"
                  quality={80}
                />
              ) : (
                <div class="w-full h-64 bg-gray-200 flex items-center justify-center">
                  <span class="text-gray-500 text-sm">No Image</span>
                </div>
              )}
            </div>
            <div class="p-6">
              <h3 class="text-xl font-semibold text-gray-800">{member.name}</h3>
              <div class="flex flex-row items-center justify-between mt-2">
                <p class="text-gray-500 text-sm mb-0">{member.year}</p>
                {/* Placeholder for future member social icons */}
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>

    <!-- Team Mentors Section (Lead + Regular Mentors) -->
    <div class="mt-16 pt-16 border-t border-gray-300">
      <h3 class="text-3xl font-bold text-center text-gray-800 mb-12">{t('team.mentors')}</h3>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-8">
        {mentorsWithImages.map((mentor) => (
          <div class="glass-card overflow-hidden relative">
            {mentor.isLeadMentor && (
              <div class="absolute top-2 right-2 z-10">
                <span class="bg-accent text-white text-sm font-bold px-2 py-1 rounded-lg">{t('team.badges.leadMentor')}</span>
              </div>
            )}
            <div class="w-full h-64 team-member-image">
                {mentor.optimizedImage ? (
                  <Image
                    src={mentor.optimizedImage}
                    alt={mentor.name}
                    width={300}
                    height={256}
                    loading="lazy"
                    class="w-full h-64 object-cover object-center"
                    format="webp"
                    quality={80}
                  />
                ) : (
                  <div class="w-full h-64 bg-gray-200 flex items-center justify-center">
                    <span class="text-gray-500 text-sm">No Image</span>
                  </div>
                )}
            </div>
            <div class="p-6">
              <h3 class="text-xl font-semibold text-gray-800">{mentor.name}</h3>
              <p class="text-gray-600">{getMentorRoleLabels(mentor).join(', ')}</p>
              <div class="flex flex-row items-center justify-between mt-2">
                <p class="text-gray-500 text-sm mb-0">{mentor.year}</p>
                {mentor.socialMedias && (
                  <div class="flex flex-row gap-1 items-center">
                    {mentor.socialMedias.instagram && (
                      <a href={mentor.socialMedias.instagram} target="_blank" rel="noopener" aria-label="Instagram" class="w-8 h-8 bg-gradient-to-r from-purple-500 to-pink-500 text-white rounded-full flex items-center justify-center hover:shadow-md hover:scale-110 transition-all duration-200">
                        <i class="fab fa-instagram text-sm"></i>
                      </a>
                    )}
                    {mentor.socialMedias.linkedin && (
                      <a href={mentor.socialMedias.linkedin} target="_blank" rel="noopener" aria-label="LinkedIn" class="w-8 h-8 bg-blue-600 text-white rounded-full flex items-center justify-center hover:shadow-md hover:scale-110 transition-all duration-200">
                        <i class="fab fa-linkedin text-sm"></i>
                      </a>
                    )}
                    {mentor.socialMedias.twitter && (
                      <a href={mentor.socialMedias.twitter} target="_blank" rel="noopener" aria-label="Twitter" class="w-8 h-8 bg-blue-400 text-white rounded-full flex items-center justify-center hover:shadow-md hover:scale-110 transition-all duration-200">
                        <i class="fab fa-twitter text-sm"></i>
                      </a>
                    )}
                    {mentor.socialMedias.facebook && (
                      <a href={mentor.socialMedias.facebook} target="_blank" rel="noopener" aria-label="Facebook" class="w-8 h-8 bg-blue-700 text-white rounded-full flex items-center justify-center hover:shadow-md hover:scale-110 transition-all duration-200">
                        <i class="fab fa-facebook text-sm"></i>
                      </a>
                    )}
                    {mentor.socialMedias.website && (
                      <a href={mentor.socialMedias.website} target="_blank" rel="noopener" aria-label="Website" class="w-8 h-8 bg-gray-600 text-white rounded-full flex items-center justify-center hover:shadow-md hover:scale-110 transition-all duration-200">
                        <i class="fas fa-globe text-sm"></i>
                      </a>
                    )}
                  </div>
                )}
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>
