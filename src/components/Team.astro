---
import { Image } from 'astro:assets';
import { currentTeamMembers, teamMentors } from '../data/teamMembers';

// Import all images from src/images/team
const images = import.meta.glob<{ default: ImageMetadata }>('/src/images/team/*.{jpg,jpeg,png,JPG,JPEG,PNG}');

// Helper function to get image module
async function getImageSrc(imagePath: string) {
  // The imagePath is now just the filename
  const imageSrc = images[`/src/images/team/${imagePath}`];

  if (imageSrc) {
    const mod = await imageSrc();
    return mod.default;
  }

  // Fallback to original path for public images
  return `/img/${imagePath}`;
}

// Process team members with optimized images
const membersWithImages = await Promise.all(
  currentTeamMembers.map(async (member) => ({
    ...member,
    optimizedImage: await getImageSrc(member.image)
  }))
);

const mentorsWithImages = await Promise.all(
  teamMentors.map(async (mentor) => ({
    ...mentor,
    optimizedImage: await getImageSrc(mentor.image)
  }))
);
---

<section id="takim" class="py-20 bg-gray-100 scroll-mt-24">
  <div class="container mx-auto px-4">
    <h2 class="text-4xl font-bold text-center text-gray-800 mb-16">Takım Üyelerimiz</h2>

    <!-- Current Team Members (Captains + Regular Members) -->
    <div class="mb-12">
      <h3 class="text-2xl font-semibold text-gray-700 text-center mb-8">Takım Üyeleri</h3>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-8">
        {membersWithImages.map((member) => (
          <div class="glass-card overflow-hidden relative">
            {member.isCaptain && (
              <div class="absolute top-2 right-2 z-10">
                <span class="bg-primary text-white text-xs font-bold px-2 py-1 rounded-full">Kaptan</span>
              </div>
            )}
            <div class="w-full h-64 team-member-image">
              {typeof member.optimizedImage === 'string' ? (
                <img
                  src={member.optimizedImage}
                  alt={member.name}
                  width={300}
                  height={256}
                  loading="lazy"
                  class="w-full h-full object-cover"
                />
              ) : (
                <Image
                  src={member.optimizedImage}
                  alt={member.name}
                  width={300}
                  height={256}
                  loading="lazy"
                  class="w-full h-full object-cover"
                  format="webp"
                  quality={80}
                />
              )}
            </div>
            <div class="p-6">
              <h3 class="text-xl font-semibold text-gray-800">{member.name}</h3>
              <p class="text-gray-600">{member.role}</p>
              <p class="text-gray-500 text-sm">{member.year}</p>
            </div>
          </div>
        ))}
      </div>
    </div>

    <!-- Team Mentors Section (Lead + Regular Mentors) -->
    <div class="mt-16 pt-16 border-t border-gray-300">
      <h3 class="text-3xl font-bold text-center text-gray-800 mb-12">Mentorlarımız</h3>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-8">
        {mentorsWithImages.map((mentor) => (
          <div class="glass-card overflow-hidden relative">
            {mentor.isLeadMentor && (
              <div class="absolute top-2 right-2 z-10">
                <span class="bg-accent text-white text-xs font-bold px-2 py-1 rounded-full">Baş Mentor</span>
              </div>
            )}
            <div class="w-full h-64 team-member-image">
                {typeof mentor.optimizedImage === 'string' ? (
                  <img
                    src={mentor.optimizedImage}
                    alt={mentor.name}
                    width={300}
                    height={256}
                    loading="lazy"
                    class="w-full h-full object-cover"
                  />
                ) : (
                  <Image
                    src={mentor.optimizedImage}
                    alt={mentor.name}
                    width={300}
                    height={256}
                    loading="lazy"
                    class="w-full h-full object-cover"
                    format="webp"
                    quality={80}
                  />
                )}
            </div>
            <div class="p-6">
              <h3 class="text-xl font-semibold text-gray-800">{mentor.name}</h3>
              <p class="text-gray-600">{mentor.role}</p>
              <p class="text-gray-500 text-sm">{mentor.year}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>