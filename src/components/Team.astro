---
import { Image } from 'astro:assets';
import { currentTeamMembers, teamMentors } from '../data/teamMembers';

// Import all images from src/images/team
const images = import.meta.glob<{ default: ImageMetadata }>('/src/images/team/*.{jpg,jpeg,png,JPG,JPEG,PNG}');

// Helper function to get image module
async function getImageSrc(imagePath: string) {
  // The imagePath is now just the filename
  const imageSrc = images[`/src/images/team/${imagePath}`];

  if (imageSrc) {
    const mod = await imageSrc();
    return mod.default;
  }

  // Fallback to original path for public images
  return `/img/${imagePath}`;
}

// Process team members with optimized images
const membersWithImages = await Promise.all(
  currentTeamMembers.map(async (member) => ({
    ...member,
    optimizedImage: await getImageSrc(member.image)
  }))
);

const mentorsWithImages = await Promise.all(
  teamMentors.map(async (mentor) => ({
    ...mentor,
    optimizedImage: await getImageSrc(mentor.image)
  }))
);
---

<section id="takim" class="py-20 bg-gray-100 scroll-mt-24">
  <div class="container mx-auto px-4">
    <h2 class="text-4xl font-bold text-center text-gray-800 mb-16">Takım Üyelerimiz</h2>

    <!-- Current Team Members (Captains + Regular Members) -->
    <div class="mb-12">
      <h3 class="text-2xl font-semibold text-gray-700 text-center mb-8">Takım Üyeleri</h3>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-8">
        {membersWithImages.map((member) => (
          <div class="glass-card overflow-hidden relative">
            {member.roles?.length > 0 && (
              <div class="absolute top-2 z-10 flex flex-col gap-2 items-start" style="left:0.5rem;">
                {member.roles.map((role) => (
                  <span
                    class="bg-primary text-white text-sm px-2 py-1 rounded-lg"
                  >
                    {role}
                  </span>
                ))}
              </div>
            )}
            {member.isCaptain && (
              <div class="absolute top-2 right-2 z-10">
                <span class="bg-primary text-white text-sm px-2 py-1 rounded-lg">Kaptan</span>
              </div>
            )}
            <div class="w-full h-64 team-member-image">
              {typeof member.optimizedImage === 'string' ? (
                <img
                  src={member.optimizedImage}
                  alt={member.name}
                  width={300}
                  height={256}
                  loading="lazy"
                  class="w-full h-full object-cover object-center"
                />
              ) : (
                <Image
                  src={member.optimizedImage}
                  alt={member.name}
                  width={300}
                  height={256}
                  loading="lazy"
                  class="w-full h-full object-cover object-center"
                  format="webp"
                  quality={80}
                />
              )}
            </div>
            <div class="p-6">
              <h3 class="text-xl font-semibold text-gray-800">{member.name}</h3>
              <p class="text-gray-600">
                {[...(member.isCaptain ? ['Kaptan'] : []), ...member.roles].join(', ')}
              </p>
              <div class="flex flex-row items-center justify-between mt-2">
                <p class="text-gray-500 text-sm mb-0">{member.year}</p>
                {/* If you want to add member social icons, add here like mentors */}
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>

    <!-- Team Mentors Section (Lead + Regular Mentors) -->
    <div class="mt-16 pt-16 border-t border-gray-300">
      <h3 class="text-3xl font-bold text-center text-gray-800 mb-12">Mentorlarımız</h3>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-8">
        {mentorsWithImages.map((mentor) => (
          <div class="glass-card overflow-hidden relative">
            {mentor.isLeadMentor && (
              <div class="absolute top-2 right-2 z-10">
                <span class="bg-accent text-white text-xs font-bold px-2 py-1 rounded-lg">Baş Mentor</span>
              </div>
            )}
            <div class="w-full h-64 team-member-image">
                {typeof mentor.optimizedImage === 'string' ? (
                  <img
                    src={mentor.optimizedImage}
                    alt={mentor.name}
                    width={300}
                    height={256}
                    loading="lazy"
                    class="w-full h-full object-cover object-center"
                  />
                ) : (
                  <Image
                    src={mentor.optimizedImage}
                    alt={mentor.name}
                    width={300}
                    height={256}
                    loading="lazy"
                    class="w-full h-full object-cover object-center"
                    format="webp"
                    quality={80}
                  />
                )}
            </div>
            <div class="p-6">
              <h3 class="text-xl font-semibold text-gray-800">{mentor.name}</h3>
              <p class="text-gray-600">{mentor.roles.join(', ')}</p>
              <div class="flex flex-row items-center justify-between mt-2">
                <p class="text-gray-500 text-sm mb-0">{mentor.year}</p>
                {mentor.socialMedias && (
                  <div class="flex flex-row gap-2 items-center">
                    {mentor.socialMedias.instagram && (
                      <a href={mentor.socialMedias.instagram} target="_blank" rel="noopener" aria-label="Instagram" class="glass-nav-item bg-white text-gray-700 p-2 rounded-full border-0 hover:bg-pink-100 transition-colors flex items-center justify-center">
                        <i class="fab fa-instagram text-xl align-middle"></i>
                      </a>
                    )}
                    {mentor.socialMedias.linkedin && (
                      <a href={mentor.socialMedias.linkedin} target="_blank" rel="noopener" aria-label="LinkedIn" class="glass-nav-item bg-white text-gray-700 p-2 rounded-full border-0 hover:bg-blue-100 transition-colors flex items-center justify-center">
                        <i class="fab fa-linkedin text-xl align-middle"></i>
                      </a>
                    )}
                    {mentor.socialMedias.twitter && (
                      <a href={mentor.socialMedias.twitter} target="_blank" rel="noopener" aria-label="Twitter" class="glass-nav-item bg-white text-gray-700 p-2 rounded-full border-0 hover:bg-blue-100 transition-colors flex items-center justify-center">
                        <i class="fab fa-twitter text-xl align-middle"></i>
                      </a>
                    )}
                    {mentor.socialMedias.facebook && (
                      <a href={mentor.socialMedias.facebook} target="_blank" rel="noopener" aria-label="Facebook" class="glass-nav-item bg-white text-gray-700 p-2 rounded-full border-0 hover:bg-blue-100 transition-colors flex items-center justify-center">
                        <i class="fab fa-facebook text-xl align-middle"></i>
                      </a>
                    )}
                    {mentor.socialMedias.website && (
                      <a href={mentor.socialMedias.website} target="_blank" rel="noopener" aria-label="Website" class="glass-nav-item bg-white text-gray-700 p-2 rounded-full border-0 hover:bg-gray-200 transition-colors flex items-center justify-center">
                        <i class="fas fa-globe text-xl align-middle"></i>
                      </a>
                    )}
                  </div>
                )}
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>