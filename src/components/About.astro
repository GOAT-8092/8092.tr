---
// About.astro - Hakkımızda (About) section component
import { getCurrentLanguage, getTranslation, getTranslations } from '../lib/i18n';
import { translations } from '../lib/translations';

const currentLang = getCurrentLanguage(Astro);
const t = (key: string) => getTranslation(translations, currentLang, key);
const translationsObj = getTranslations(currentLang);
---

<section id="hakkimizda" class="pt-32 pb-20 scroll-mt-24">
  <div class="container mx-auto px-4">
    <h2 class="text-4xl font-bold text-center text-gray-800 mb-16">{t('about.title')}</h2>
    <div class="max-w-6xl mx-auto">
      <div class="mb-12">
        <h3 class="text-3xl font-bold text-center text-primary mb-6">{t('about.subtitle')}</h3>
        <p class="text-lg text-gray-700 leading-relaxed">
          <strong>{t('about.intro')}</strong>
        </p>
      </div>

      <div class="space-y-10">
        <!-- 2019 Sezonu -->
        <div class="bg-white rounded-lg shadow-lg p-8">
          <h4 class="text-2xl font-bold text-secondary mb-4">{t('about.season_2019_title')}</h4>
          <p class="text-gray-700 leading-relaxed">
            {t('about.season_2019_description')}
          </p>
        </div>

        <!-- 2020 Sezonu -->
        <div class="bg-white rounded-lg shadow-lg p-8">
          <h4 class="text-2xl font-bold text-secondary mb-4">{t('about.season_2020_title')}</h4>
          <p class="text-gray-700 leading-relaxed mb-4">
            {t('about.season_2020_description')}
          </p>
          <div class="text-white p-4 rounded-lg" style="background: linear-gradient(90deg, #512f75 0%, #673a8e 100%);">
            <p class="font-bold text-lg">{t('about.season_2020_award_title')}</p>
            <p>{t('about.season_2020_award_description')}</p>
          </div>
        </div>

        <!-- 2021 Sezonu -->
        <div class="bg-white rounded-lg shadow-lg p-8">
          <h4 class="text-2xl font-bold text-secondary mb-4">{t('about.season_2021_title')}</h4>
          <p class="text-gray-700 leading-relaxed mb-4">
            {t('about.season_2021_description')}
          </p>
          <div class="bg-gray-100 p-4 rounded-lg">
            <p class="text-gray-700">
              <strong>{t('about.season_2021_note_title')}</strong> {t('about.season_2021_note_text')}
            </p>
          </div>
        </div>

        <!-- 2022 Sezonu -->
        <div class="bg-white rounded-lg shadow-lg p-8">
          <h4 class="text-2xl font-bold text-secondary mb-4">{t('about.season_2022_title')}</h4>
          <p class="text-gray-700 leading-relaxed">
            {t('about.season_2022_description')}
          </p>
        </div>

        <!-- 2023 Sezonu -->
        <div class="bg-white rounded-lg shadow-lg p-8">
          <h4 class="text-2xl font-bold text-secondary mb-4">{t('about.season_2023_title')}</h4>
          <p class="text-gray-700 leading-relaxed">
            {t('about.season_2023_description')}
          </p>
        </div>

        <!-- 2024 Sezonu -->
        <div class="bg-white rounded-lg shadow-lg p-8">
          <h4 class="text-2xl font-bold text-secondary mb-4">{t('about.season_2024_title')}</h4>
          <p class="text-gray-700 leading-relaxed">
            {t('about.season_2024_description')}
          </p>
          <div class="bg-gray-100 p-4 rounded-lg">
            <p class="text-gray-700">
              <strong>{t('about.season_2024_note_title')}</strong> {t('about.season_2024_note_text')}
            </p>

          </div>
        </div>

        <!-- 2025 Sezonu -->
        <div class="bg-white rounded-lg shadow-lg p-8">
          <h4 class="text-2xl font-bold text-secondary mb-4">{t('about.season_2025_title')}</h4>
          <p class="text-gray-700 leading-relaxed">
            {t('about.season_2025_description')}
          </p>
          <p class="text-gray-700 leading-relaxed mt-4">
            {t('about.season_2025_description_2')}
          </p>
        </div>

        <!-- Yarışma İstatistikleri -->
        <div class="text-white rounded-lg p-8" style="background: linear-gradient(90deg, #512f75 0%, #673a8e 100%);">
          <h3 class="text-2xl font-bold mb-6">{t('about.stats_title')}</h3>
          <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            <div class="text-center">
              <p class="text-4xl font-bold">5</p>
              <p>{t('about.stats_seasons_label')}</p>
            </div>
            <div class="text-center">
              <p class="text-4xl font-bold">1</p>
              <p>{t('about.stats_awards_label')}</p>
              <p class="text-sm">{t('about.stats_awards_note')}</p>
            </div>
            <div class="text-center">
              <p class="text-4xl font-bold">17-19</p>
              <p>{t('about.stats_record_label')}</p>
            </div>
          </div>
        </div>

        <!-- Destekçilerimiz -->
        <div>
          <h3 class="text-2xl font-bold text-gray-800 mb-4">{t('about.supporters_title')}</h3>
          <div class="bg-white rounded-lg shadow-md p-6">
            <div class="grid grid-cols-2 md:grid-cols-4 gap-6 items-center">
              <img src="img/bsh.logo.png" alt="BSH Logo" class="w-full">
              <div class="text-center">
                <p class="font-semibold">Kodluyoruz Derneği</p>
              </div>
              <div class="text-center">
                <p class="font-semibold">Çetin Group</p>
              </div>
              <div class="text-center">
                <p class="font-semibold">Saray Alüminyum</p>
              </div>
              <div class="text-center">
                <p class="font-semibold">Yılmaz Kalıp</p>
              </div>
              <div class="text-center">
                <p class="font-semibold">Halit Narin MTAL</p>
              </div>
              <div class="text-center">
                <p class="font-semibold">Veliköy OSB MTAL</p>
              </div>
              <div class="text-center">
                <p class="font-semibold">Çemobsan</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
