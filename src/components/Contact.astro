---
// Contact.astro - İletişim (Contact) section component
import { getCurrentLanguage, getTranslation, getTranslations } from '../lib/i18n';
import { translations } from '../lib/translations';

const currentLang = getCurrentLanguage(Astro);
const t = (key: string) => getTranslation(translations, currentLang, key);
const translationsObj = getTranslations(currentLang);
const contactTranslations = translationsObj.contact ?? {};
const addressLines = Array.isArray(contactTranslations.address_lines) ? contactTranslations.address_lines : [];
const quickLinks = contactTranslations.quick_links ?? {};
const formTranslations = contactTranslations.form ?? {};
const subjectOptions = formTranslations.subjectOptions ?? {};
const formMessageStrings = {
  sending: formTranslations.sendingButton ?? t('contact.form.sending'),
  success: formTranslations.successAlert ?? t('contact.form.success'),
  error: formTranslations.errorAlert ?? t('contact.form.error')
};
---

<section id="iletisim" class="pt-32 pb-20 bg-gray-50 scroll-mt-24">
  <div class="container mx-auto px-4">
    <h2 class="text-4xl font-bold text-center text-gray-800 mb-16">{t('contact.title')}</h2>
    <div class="max-w-6xl mx-auto">

      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">

        <!-- Contact Information -->
        <div class="space-y-8">
          <div>
            <h3 class="text-2xl font-bold text-gray-800 mb-6">{t('contact.subtitle')}</h3>
            <p class="text-lg text-gray-600 mb-8">
              {t('contact.description')}
            </p>
          </div>

          <!-- Contact Methods -->
          <div class="space-y-6">
            <!-- Email -->
            <div class="flex items-start space-x-4">
              <div class="glass-nav-item bg-primary text-white p-3 rounded-full border-0">
                <i class="fas fa-envelope text-xl"></i>
              </div>
              <div>
                <h4 class="text-lg font-bold text-gray-800">{t('contact.email')}</h4>
                <p class="text-gray-600">goat8092@gmail.com</p>
                <a href="mailto:goat8092@gmail.com" class="text-primary hover:text-secondary transition-colors">
                  {t('contact.email_link')}
                </a>
              </div>
            </div>

            <!-- Address -->
            <div class="flex items-start space-x-4">
              <div class="glass-nav-item bg-primary text-white p-3 rounded-full border-0">
                <i class="fas fa-map-marker-alt text-xl"></i>
              </div>
              <div>
                <h4 class="text-lg font-bold text-gray-800">{t('contact.address_title')}</h4>
                <p class="text-gray-600">
                  {addressLines.map((line: string, index: number) => (
                    <>
                      {line}
                      {index < addressLines.length - 1 && <br />}
                    </>
                  ))}
                </p>
                <a href="https://maps.app.goo.gl/iJsZm8d5EyumDyw97" target="_blank" class="text-primary hover:text-secondary transition-colors">
                  {t('contact.view_map')}
                </a>
              </div>
            </div>

            <!-- Social Media -->
            <div class="flex items-start space-x-4">
              <div class="glass-nav-item bg-primary text-white p-3 rounded-full border-0">
                <i class="fas fa-share-alt text-xl"></i>
              </div>
              <div>
                <h4 class="text-lg font-bold text-gray-800">{t('contact.social_title')}</h4>
                <div class="flex space-x-4 mt-2">
                  <a href="https://www.instagram.com/goat8092/" class="text-gray-600 hover:text-primary text-2xl transition-colors" target="_blank">
                    <i class="fab fa-instagram"></i>
                  </a>
                  <a href="https://x.com/goat8092" class="text-gray-600 hover:text-primary text-2xl transition-colors" target="_blank">
                    <i class="fab fa-twitter"></i>
                  </a>
                  <a href="https://www.linkedin.com/company/greatest-of-all-times-8092/" class="text-gray-600 hover:text-primary text-2xl transition-colors" target="_blank">
                    <i class="fab fa-linkedin"></i>
                  </a>
                  <a href="https://www.youtube.com/@greatestofalltimes8092" class="text-gray-600 hover:text-primary text-2xl transition-colors" target="_blank">
                    <i class="fab fa-youtube"></i>
                  </a>
                </div>
              </div>
            </div>
          </div>

      <!-- Quick Links -->
      <div class="bg-white rounded-lg p-6 shadow-lg">
        <h4 class="text-lg font-bold text-gray-800 mb-4">{t('contact.quick_links_title')}</h4>
        <div class="grid grid-cols-2 gap-4">
          <a href="#hakkimizda" class="text-primary hover:text-secondary transition-colors" onclick="scrollWindowTo('hakkimizda')">
            <i class="fas fa-info-circle mr-2"></i>{quickLinks.about ?? t('nav.about')}
              </a>
              <a href="#takim" class="text-primary hover:text-secondary transition-colors" onclick="scrollWindowTo('takim')">
                <i class="fas fa-users mr-2"></i>{quickLinks.team ?? t('nav.team')}
              </a>
              <a href="#projelerimiz" class="text-primary hover:text-secondary transition-colors" onclick="scrollWindowTo('projelerimiz')">
                <i class="fas fa-project-diagram mr-2"></i>{quickLinks.projects ?? t('nav.projects')}
              </a>
              <a href="#galeri" class="text-primary hover:text-secondary transition-colors" onclick="scrollWindowTo('galeri')">
                <i class="fas fa-images mr-2"></i>{quickLinks.gallery ?? t('nav.gallery')}
              </a>
        </div>
      </div>

    </div>

    <!-- Contact Form -->
    <div class="bg-white rounded-lg shadow-lg p-8">
          <h3 class="text-2xl font-bold text-gray-800 mb-6">{t('contact.send_message_title')}</h3>
          <form action="https://formspree.io/f/xrbawrgv" method="POST" class="space-y-6" id="contact-form">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <div>
                <label for="firstName" class="block text-sm font-medium text-gray-700 mb-2">
                  {formTranslations.firstNameLabel ?? t('contact.form.firstNameLabel')}
                </label>
                <input
                  type="text"
                  id="firstName"
                  name="firstName"
                  required
                  class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent transition-all"
                  placeholder={formTranslations.firstNamePlaceholder ?? ''}
                >
              </div>
              <div>
                <label for="lastName" class="block text-sm font-medium text-gray-700 mb-2">
                  {formTranslations.lastNameLabel ?? ''}
                </label>
                <input
                  type="text"
                  id="lastName"
                  name="lastName"
                  required
                  class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent transition-all"
                  placeholder={formTranslations.lastNamePlaceholder ?? ''}
                >
              </div>
            </div>

            <div>
              <label for="email" class="block text-sm font-medium text-gray-700 mb-2">{t('contact.form.email')}</label>
              <input
                type="email"
                id="email"
                name="email"
                required
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent transition-all"
                placeholder={formTranslations.emailPlaceholder ?? ''}
              >
            </div>

            <div>
              <label for="phone" class="block text-sm font-medium text-gray-700 mb-2">
                {formTranslations.phoneLabel ?? ''}
              </label>
              <input
                type="tel"
                id="phone"
                name="phone"
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent transition-all"
                placeholder={formTranslations.phonePlaceholder ?? ''}
              >
            </div>

            <div>
              <label for="subject" class="block text-sm font-medium text-gray-700 mb-2">{t('contact.form.subject')}</label>
              <select
                id="subject"
                name="subject"
                required
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent transition-all"
              >
                <option value="">{formTranslations.subjectPlaceholder ?? ''}</option>
                <option value="sponsorship">{subjectOptions.sponsorship ?? ''}</option>
                <option value="collaboration">{subjectOptions.collaboration ?? ''}</option>
                <option value="membership">{subjectOptions.membership ?? ''}</option>
                <option value="information">{subjectOptions.information ?? ''}</option>
                <option value="other">{subjectOptions.other ?? ''}</option>
              </select>
            </div>

            <div>
              <label for="message" class="block text-sm font-medium text-gray-700 mb-2">{t('contact.form.message')}</label>
              <textarea
                id="message"
                name="message"
                rows="6"
                required
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent transition-all resize-none"
                placeholder={formTranslations.messagePlaceholder ?? ''}
              ></textarea>
            </div>

            <div class="flex items-start space-x-3">
              <input
                type="checkbox"
                id="consent"
                name="consent"
                required
                class="mt-1 w-4 h-4 text-primary border-gray-300 rounded focus:ring-primary"
              >
              <label for="consent" class="text-sm text-gray-600">
                {formTranslations.consentText ?? ''}
              </label>
            </div>

            <button
              type="submit"
              class="w-full bg-primary text-white py-3 px-6 rounded-lg hover:bg-secondary transition-all duration-300 transform hover:scale-105 focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-2"
            >
              <i class="fas fa-paper-plane mr-2"></i>
              {formTranslations.submitButton ?? t('contact.form.send')}
            </button>
          </form>
        </div>

      </div>

    </div>
  </div>
</section>

<script is:inline>
  const formMessages = ${JSON.stringify(formMessageStrings)};

  document.addEventListener('DOMContentLoaded', () => {
    const contactForm = document.getElementById('contact-form');
    if (!(contactForm instanceof HTMLFormElement)) {
      return;
    }

    contactForm.addEventListener('submit', (event) => {
      event.preventDefault();

      const submitButton = contactForm.querySelector('button[type="submit"]');
      if (!(submitButton instanceof HTMLButtonElement)) {
        return;
      }

      const originalText = submitButton.innerHTML;
      submitButton.innerHTML = `<i class="fas fa-spinner fa-spin mr-2"></i>${formMessages.sending}`;
      submitButton.disabled = true;

      const formData = new FormData(contactForm);

      fetch(contactForm.action, {
        method: 'POST',
        body: formData,
        headers: {
          Accept: 'application/json',
        },
      })
        .then((response) => {
          if (!response.ok) {
            throw new Error('Form submission failed');
          }
          return response.json().catch(() => null);
        })
        .then(() => {
          const successMessage = document.createElement('div');
          successMessage.className = 'bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-4';
          successMessage.innerHTML = `<i class="fas fa-check-circle mr-2"></i>${formMessages.success}`;
          contactForm.insertBefore(successMessage, contactForm.firstChild);
          contactForm.reset();
          setTimeout(() => successMessage.remove(), 10000);
        })
        .catch(() => {
          const errorMessage = document.createElement('div');
          errorMessage.className = 'bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4';
          errorMessage.innerHTML = `<i class="fas fa-exclamation-circle mr-2"></i>${formMessages.error}`;
          contactForm.insertBefore(errorMessage, contactForm.firstChild);
          setTimeout(() => errorMessage.remove(), 10000);
        })
        .finally(() => {
          submitButton.innerHTML = originalText;
          submitButton.disabled = false;
        });
    });
  });
</script>
