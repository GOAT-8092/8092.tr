---
import { getAllTeamMembers, getAllProjects, getAllBlogPosts, getAllEvents, getContentStats } from '../lib/cms-utils';

const stats = await getContentStats();
const recentTeam = await getAllTeamMembers();
const recentProjects = await getAllProjects();
const recentBlog = await getAllBlogPosts();
const recentEvents = await getAllEvents();
---

<div class="bg-white rounded-lg shadow-lg p-6" role="region" aria-label="Content Management Dashboard">
  <h2 class="text-2xl font-bold text-purple-800 mb-6">İçerik Yönetim Paneli</h2>

  <!-- Statistics Overview -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4 mb-8">
    <div class="bg-purple-50 rounded-lg p-4 border border-purple-200">
      <h3 class="text-lg font-semibold text-purple-700">Takım Üyeleri</h3>
      <div class="text-3xl font-bold text-purple-800">{stats.team.total}</div>
      <div class="text-sm text-purple-600 mt-1">
        Aktif: {stats.team.current} | Mezun: {stats.team.alumni} | Mentor: {stats.team.mentors}
      </div>
    </div>

    <div class="bg-blue-50 rounded-lg p-4 border border-blue-200">
      <h3 class="text-lg font-semibold text-blue-700">Projeler</h3>
      <div class="text-3xl font-bold text-blue-800">{stats.projects.total}</div>
      <div class="text-sm text-blue-600 mt-1">
        Tamamlandı: {stats.projects.completed} | Devam: {stats.projects.ongoing}
      </div>
    </div>

    <div class="bg-green-50 rounded-lg p-4 border border-green-200">
      <h3 class="text-lg font-semibold text-green-700">Blog Yazıları</h3>
      <div class="text-3xl font-bold text-green-800">{stats.blog.published}</div>
      <div class="text-sm text-green-600 mt-1">
        Taslak: {stats.blog.drafts} | Öne Çıkan: {stats.blog.featured}
      </div>
    </div>

    <div class="bg-orange-50 rounded-lg p-4 border border-orange-200">
      <h3 class="text-lg font-semibold text-orange-700">Etkinlikler</h3>
      <div class="text-3xl font-bold text-orange-800">{stats.events.upcoming}</div>
      <div class="text-sm text-orange-600 mt-1">
        Gelecek: {stats.events.upcoming} | Geçmiş: {stats.events.past}
      </div>
    </div>
  </div>

  <!-- Quick Actions -->
  <div class="bg-gray-50 rounded-lg p-4 mb-8">
    <h3 class="text-lg font-semibold text-gray-700 mb-3">Hızlı İşlemler</h3>
    <div class="flex flex-wrap gap-2">
      <a href="/admin/team/new" class="bg-purple-600 text-white px-4 py-2 rounded hover:bg-purple-700 transition-colors">
        + Takım Üyesi Ekle
      </a>
      <a href="/admin/projects/new" class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 transition-colors">
        + Proje Ekle
      </a>
      <a href="/admin/blog/new" class="bg-green-600 text-white px-4 py-2 rounded hover:bg-green-700 transition-colors">
        + Blog Yazısı Ekle
      </a>
      <a href="/admin/events/new" class="bg-orange-600 text-white px-4 py-2 rounded hover:bg-orange-700 transition-colors">
        + Etkinlik Ekle
      </a>
      <a href="/admin/media" class="bg-gray-600 text-white px-4 py-2 rounded hover:bg-gray-700 transition-colors">
        Medya Yönetimi
      </a>
    </div>
  </div>

  <!-- Search Functionality -->
  <div class="bg-white border rounded-lg p-4 mb-8">
    <h3 class="text-lg font-semibold text-gray-700 mb-3">İçerik Arama</h3>
    <form id="cms-search-form" class="space-y-3">
      <div>
        <label for="cms-search-input" class="block text-sm font-medium text-gray-700 mb-1">
          Tüm İçeriklerde Ara
        </label>
        <input
          type="search"
          id="cms-search-input"
          name="query"
          placeholder="İsim, proje, yazı veya etkinlik ara..."
          class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-purple-500"
          aria-label="İçerik arama"
        >
      </div>
      <button
        type="submit"
        class="bg-purple-600 text-white px-4 py-2 rounded hover:bg-purple-700 transition-colors"
      >
        Ara
      </button>
    </form>
    <div id="cms-search-results" class="mt-4 hidden" role="region" aria-live="polite"></div>
  </div>

  <!-- Recent Content -->
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
    <!-- Recent Team Members -->
    <div class="bg-white border rounded-lg p-4">
      <h3 class="text-lg font-semibold text-gray-700 mb-3">Son Eklenen Takım Üyeleri</h3>
      <div class="space-y-2">
        {recentTeam.slice(0, 5).map(member => (
          <div class="flex items-center space-x-3 p-2 hover:bg-gray-50 rounded">
            <img
              src={member.data.image || '/img/default-avatar.png'}
              alt={member.data.name}
              class="w-10 h-10 rounded-full object-cover"
              loading="lazy"
            >
            <div class="flex-1">
              <div class="font-medium text-gray-900">{member.data.name}</div>
              <div class="text-sm text-gray-600">{member.data.role}</div>
            </div>
            <div class="text-xs text-gray-500">{member.data.year}</div>
          </div>
        ))}
      </div>
      <a href="/admin/team" class="text-purple-600 hover:text-purple-800 text-sm mt-3 inline-block">
        Tüm Takım Üyeleri →
      </a>
    </div>

    <!-- Recent Projects -->
    <div class="bg-white border rounded-lg p-4">
      <h3 class="text-lg font-semibold text-gray-700 mb-3">Son Eklenen Projeler</h3>
      <div class="space-y-2">
        {recentProjects.slice(0, 5).map(project => (
          <div class="p-2 hover:bg-gray-50 rounded">
            <div class="font-medium text-gray-900">{project.data.title}</div>
            <div class="text-sm text-gray-600">{project.data.description}</div>
            <div class="flex items-center justify-between mt-1">
              <span class={`text-xs px-2 py-1 rounded-full ${
                project.data.status === 'completed' ? 'bg-green-100 text-green-800' :
                project.data.status === 'ongoing' ? 'bg-blue-100 text-blue-800' :
                'bg-yellow-100 text-yellow-800'
              }`}>
                {project.data.status === 'completed' ? 'Tamamlandı' :
                 project.data.status === 'ongoing' ? 'Devam Ediyor' : 'Planlandı'}
              </span>
              <span class="text-xs text-gray-500">{project.data.year}</span>
            </div>
          </div>
        ))}
      </div>
      <a href="/admin/projects" class="text-purple-600 hover:text-purple-800 text-sm mt-3 inline-block">
        Tüm Projeler →
      </a>
    </div>

    <!-- Recent Blog Posts -->
    <div class="bg-white border rounded-lg p-4">
      <h3 class="text-lg font-semibold text-gray-700 mb-3">Son Blog Yazıları</h3>
      <div class="space-y-2">
        {recentBlog.slice(0, 5).map(post => (
          <div class="p-2 hover:bg-gray-50 rounded">
            <div class="font-medium text-gray-900">{post.data.title}</div>
            <div class="text-sm text-gray-600">{post.data.description}</div>
            <div class="flex items-center justify-between mt-1">
              <span class="text-xs text-gray-500">{post.data.author}</span>
              <span class={`text-xs px-2 py-1 rounded-full ${
                post.data.draft ? 'bg-yellow-100 text-yellow-800' :
                post.data.featured ? 'bg-purple-100 text-purple-800' :
                'bg-green-100 text-green-800'
              }`}>
                {post.data.draft ? 'Taslak' :
                 post.data.featured ? 'Öne Çıkan' : 'Yayınlandı'}
              </span>
            </div>
          </div>
        ))}
      </div>
      <a href="/admin/blog" class="text-purple-600 hover:text-purple-800 text-sm mt-3 inline-block">
        Tüm Yazılar →
      </a>
    </div>

    <!-- Recent Events -->
    <div class="bg-white border rounded-lg p-4">
      <h3 class="text-lg font-semibold text-gray-700 mb-3">Yaklaşan Etkinlikler</h3>
      <div class="space-y-2">
        {recentEvents.slice(0, 5).map(event => (
          <div class="p-2 hover:bg-gray-50 rounded">
            <div class="font-medium text-gray-900">{event.data.title}</div>
            <div class="text-sm text-gray-600">{event.data.location}</div>
            <div class="flex items-center justify-between mt-1">
              <span class="text-xs text-gray-500">
                {new Date(event.data.date).toLocaleDateString('tr-TR')}
              </span>
              <span class={`text-xs px-2 py-1 rounded-full ${
                event.data.status === 'upcoming' ? 'bg-blue-100 text-blue-800' :
                event.data.status === 'ongoing' ? 'bg-orange-100 text-orange-800' :
                'bg-gray-100 text-gray-800'
              }`}>
                {event.data.status === 'upcoming' ? 'Gelecek' :
                 event.data.status === 'ongoing' ? 'Devam Ediyor' : 'Tamamlandı'}
              </span>
            </div>
          </div>
        ))}
      </div>
      <a href="/admin/events" class="text-purple-600 hover:text-purple-800 text-sm mt-3 inline-block">
        Tüm Etkinlikler →
      </a>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const searchForm = document.getElementById('cms-search-form');
    const searchInput = document.getElementById('cms-search-input');
    const searchResults = document.getElementById('cms-search-results');

    searchForm.addEventListener('submit', async (e) => {
      e.preventDefault();
      const query = (searchInput as HTMLInputElement).value.trim();

      if (!query) {
        searchResults?.classList.add('hidden');
        return;
      }

      try {
        const response = await fetch(`/api/search?q=${encodeURIComponent(query)}`);
        const results = await response.json();

        if (results.length === 0) {
          searchResults!.innerHTML = '<p class="text-gray-600">Sonuç bulunamadı.</p>';
        } else {
          searchResults!.innerHTML = `
            <h4 class="font-semibold text-gray-700 mb-2">Arama Sonuçları (${results.length})</h4>
            <div class="space-y-2">
              ${results.map((result: any) => {
                let url = '';
                let label = '';

                switch (result.type) {
                  case 'team':
                    url = `/takim#${result.entry.slug}`;
                    label = 'Takım Üyesi';
                    break;
                  case 'projects':
                    url = `/projelerimiz#${result.entry.slug}`;
                    label = 'Proje';
                    break;
                  case 'blog':
                    url = `/blog/${result.entry.slug}`;
                    label = 'Blog Yazısı';
                    break;
                  case 'events':
                    url = `/etkinlikler#${result.entry.slug}`;
                    label = 'Etkinlik';
                    break;
                  default:
                    url = result.entry.slug ? `/#${result.entry.slug}` : '#';
                    label = result.type;
                }

                return `
                  <a href="${url}" class="block p-2 hover:bg-purple-50 rounded border border-transparent hover:border-purple-200">
                    <div class="flex items-center justify-between">
                      <div>
                        <span class="text-sm font-medium text-purple-700">${result.entry.data.title || result.entry.data.name}</span>
                        <span class="text-xs text-gray-500 ml-2">${label}</span>
                      </div>
                      <span class="text-xs text-gray-400">Relevans: ${result.relevance}</span>
                    </div>
                  </a>
                `;
              }).join('')}
            </div>
          `;
        }

        searchResults!.classList.remove('hidden');
      } catch (error) {
        console.error('Search error:', error);
        searchResults!.innerHTML = '<p class="text-red-600">Arama sırasında bir hata oluştu.</p>';
        searchResults!.classList.remove('hidden');
      }
    });
  });
</script>
